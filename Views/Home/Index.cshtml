@{
    ViewData["Title"] = "Home Page";
}

    <section class="slideshow">
        <div class="slide fade">
            <img src="~/img/banner.jpg" alt="Fitness Banner 1">
        </div>
        <div class="slide fade">
            <img src="~/img/banner2.jpg" alt="Fitness Banner 2">
        </div>
        <div class="slideshow-dots">
            <span class="dot active"></span>
            <span class="dot"></span>
        </div>
    </section>

    <!-- Product Grid -->
    <section class="products">
        <div class="container">
            <h2 class="section-title">Top Sellers</h2>
            <div class="product-grid">
                <!-- Product Card 1 -->
                <div class="product-card">
                    <div class="product-image">
                        <img src="https://via.placeholder.com/300x300" alt="Product 1">
                    </div>
                    <h3>Impact Whey Protein</h3>
                    <div class="rating">
                        <i class="fas fa-star"></i>
                        <i class="fas fa-star"></i>
                        <i class="fas fa-star"></i>
                        <i class="fas fa-star"></i>
                        <i class="fas fa-star"></i>
                    </div><p class="price">$29.99</p>
                    <button class="buy-now">Buy Now</button>
                </div>
                <!-- Product Card 2 -->
                <div class="product-card">
                    <div class="product-image">
                        <img src="https://via.placeholder.com/300x300" alt="Product 2">
                    </div>
                    <h3>BCAA Energy</h3>
                    <div class="rating">
                        <i class="fas fa-star"></i>
                        <i class="fas fa-star"></i>
                        <i class="fas fa-star"></i>
                        <i class="fas fa-star"></i>
                        <i class="fas fa-star-half-alt"></i>
                    </div>                    <p class="price">$24.99</p>
                    <button class="buy-now">Buy Now</button>
                </div>
                <!-- Product Card 3 -->
                <div class="product-card">
                    <div class="product-image">
                        <img src="https://via.placeholder.com/300x300" alt="Product 3">
                    </div>
                    <h3>Protein Bar</h3>
                    <div class="rating">
                        <i class="fas fa-star"></i>
                        <i class="fas fa-star"></i>
                        <i class="fas fa-star"></i>
                        <i class="fas fa-star"></i>
                        <i class="far fa-star"></i>
                    </div>                    <p class="price">$19.99</p>
                    <button class="buy-now">Buy Now</button>
                </div>
                <!-- Product Card 4 -->
                <div class="product-card">
                    <div class="product-image">
                        <img src="https://via.placeholder.com/300x300" alt="Product 4">
                    </div>
                    <h3>Pre-Workout</h3>
                    <div class="rating">
                        <i class="fas fa-star"></i>
                        <i class="fas fa-star"></i>
                        <i class="fas fa-star"></i>
                        <i class="fas fa-star"></i>
                        <i class="fas fa-star"></i>
                    </div><p class="price">$34.99</p>
                    <button class="buy-now">Buy Now</button>
                </div>
            </div>
        </div>
    </section>

    <!-- Newsletter Section -->
    <section class="newsletter">
        <div class="container">
            <h2>Get the latest offers & deals</h2>
            <form class="newsletter-form">
                <input type="email" placeholder="Enter your email address">
                <button type="submit">Subscribe</button>
            </form>
        </div>
    </section>