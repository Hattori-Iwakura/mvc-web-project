@model IEnumerable<mvc_web_project.Models.Product>

@{
    ViewData["Title"] = "Products";
}

<h1>Products</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Product</a>
</p>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 col-lg-3 mb-4">
            <div class="card h-100">
                <img src="@item.ImageUrl" class="card-img-top" alt="@item.Name" style="height: 200px; object-fit: cover;">
                <div class="card-body">
                    <h5 class="card-title">@item.Name</h5>
                    <p class="card-text text-muted">@item.Category?.Name</p>
                    <p class="card-text">$@item.Price.ToString("0.00")</p>
                    <p class="card-text">Stock: @item.QuantityInStock</p>
                </div>
                <div class="card-footer bg-transparent">
                    <div class="btn-group w-100">
                        <a asp-action="Edit" asp-route-id="@item.ProductId" class="btn btn-sm btn-warning">Edit</a>
                        <a asp-action="Details" asp-route-id="@item.ProductId" class="btn btn-sm btn-info">Details</a>
                        <a asp-action="Delete" asp-route-id="@item.ProductId" class="btn btn-sm btn-danger">Delete</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>