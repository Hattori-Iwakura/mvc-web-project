<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FitSupplement</title>    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/mvc_web_project.styles.css" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;600;700&display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <header>
        <div class="utility-bar">
            <div class="container-fluid">
                <div class="utility-links">
                    <a href="#"><i class="fas fa-question-circle"></i> Help</a>
                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                            <span class="me-2"><i class="fas fa-user"></i> @User.Identity.Name</span>
                            <button type="submit" class="btn btn-link nav-link d-inline p-0">
                                <i class="fas fa-sign-out-alt"></i> Logout
                            </button>
                        </form>
                    }
                    else
                    {
                        <a asp-controller="Account" asp-action="Login"><i class="fas fa-user"></i> Login</a>
                    }
                    <a href="#"><i class="fas fa-heart"></i> Wishlist</a>
                    <a href="#"><i class="fas fa-shopping-cart"></i> Cart</a>
                </div>
            </div>
        </div>
        
        <nav class="main-nav">
            <div class="container-fluid">
                <div class="nav-wrapper">
                    <div class="logo">
                        <h1><a asp-controller="Home" asp-action="Index">FitSupplement</a></h1>
                    </div>
                    <button class="mobile-menu-toggle d-md-none">
                        <i class="fas fa-bars"></i>
                    </button>
                    <div class="search-bar">
                        <form action="/search" method="get">
                            <input type="search" placeholder="Search products..." name="q">
                            <button type="submit"><i class="fas fa-search d-block"></i></button>
                        </form>
                    </div>
                </div>
                <ul class="nav-links">
                    <li class="dropdown">
                        <a href="#">Protein</a>
                        <div class="dropdown-content">
                            <a href="#">Whey Protein</a>
                            <a href="#">Plant Protein</a>
                            <a href="#">Casein</a>
                        </div>
                    </li>
                    <li class="dropdown">
                        <a href="#">Vitamins</a>
                        <div class="dropdown-content">
                            <a href="#">Multivitamins</a>
                            <a href="#">Vitamin D</a>
                            <a href="#">Fish Oil</a>
                        </div>
                    </li>
                    <li class="dropdown">
                        <a href="#">Pre-Workout</a>
                        <div class="dropdown-content">
                            <a href="#">Stimulant</a>
                            <a href="#">Non-Stimulant</a>
                            <a href="#">Energy Drinks</a>
                        </div>
                    </li>                    @if (User.IsInRole("Admin"))
                    {
                        <li class="dropdown">
                            <a href="#">Controllers</a>
                            <div class="dropdown-content">
                                <a asp-controller="Category" asp-action="Index">Categories</a>
                                <a asp-controller="Product" asp-action="Index">Products</a>
                                <a asp-controller="User" asp-action="Index">Users</a>
                            </div>
                        </li>
                    }
                </ul>
            </div>
        </nav>
    </header>

    <main role="main">
        @RenderBody()
    </main>

    <footer>
        <div class="container-fluid">
            <div class="footer-grid">
                <div class="footer-column">
                    <h3>Shop</h3>
                    <ul>
                        <li><a href="#">Protein</a></li>
                        <li><a href="#">Vitamins</a></li>
                        <li><a href="#">Pre-Workout</a></li>
                        <li><a href="#">Accessories</a></li>
                    </ul>
                </div>
                <div class="footer-column">
                    <h3>Help</h3>
                    <ul>
                        <li><a href="#">Contact Us</a></li>
                        <li><a href="#">FAQ</a></li>
                        <li><a href="#">Shipping</a></li>
                        <li><a href="#">Returns</a></li>
                    </ul>
                </div>
                <div class="footer-column">
                    <h3>About</h3>
                    <ul>
                        <li><a href="#">Our Story</a></li>
                        <li><a href="#">Blog</a></li>
                        <li><a href="#">Careers</a></li>
                        <li><a href="#">Press</a></li>
                    </ul>
                </div>
                <div class="footer-column">
                    <h3>Follow Us</h3>
                    <div class="social-icons">
                        <a href="#"><i class="fab fa-facebook"></i></a>
                        <a href="#"><i class="fab fa-instagram"></i></a>
                        <a href="#"><i class="fab fa-twitter"></i></a>
                        <a href="#"><i class="fab fa-youtube"></i></a>
                    </div>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
